@using JadooProject.Features.Mediator.Results.TestimOnialResults
@model List<GetTestimOnialQueryResult>

@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <h3>Referanslar</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>id</th>
                <th>Ad Soyad</th>
                <th>Lokasyon</th>
                <th>Yorum</th>
                <th>Görsel</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.TestimonialId</td>
                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td>@item.Comment</td>
                    <td><img src="@item.ImageUrl" width="100" height="100" style="object-fit: cover;" /></td>
                    <td>
                        <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning btn-sm">Güncelle</a>
                        <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Testimonial Ekle</a>
</div>
