@using JadooProject.Features.Mediator.Commands.TesstimOnialCommands
@model UpdateTestimOnialCommand
@{
    ViewData["Title"] = "Testimonial Güncelle";
}

<div class="container mt-4">
    <h3>Testimonial Güncelle</h3>
    <form method="post">
        <input type="hidden" asp-for="TestimOnialId" />

        <div class="mb-3">
            <label class="form-label">Ad Soyad</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Lokasyon</label>
            <input asp-for="Location" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Yorum</label>
            <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Resim URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>
