@using JadooProject.Features.CQRS.Results.TravelStepResults
@model List<GetTravelStepsQueryResult>

@{
    ViewData["Title"] = "TravelSteps";
}

<div class="container">
    <h3>Gezi Adımları</h3>
    <a href="/TravelStep/Create" class="btn btn-primary mb-3">Yeni Adım Ekle</a>

    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>İkon</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TravelStepId</td>
                <td><i class="@item.Icon"></i> <span class="ms-2">@item.Icon</span></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a href="/TravelStep/Update/@item.TravelStepId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/TravelStep/Delete/@item.TravelStepId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>