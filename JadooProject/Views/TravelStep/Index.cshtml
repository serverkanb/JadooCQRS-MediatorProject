@using JadooProject.Features.CQRS.Results.TravelStepResults
@model List<GetTravelStepsQueryResult>

@{
    ViewData["Title"] = "TravelSteps";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <h3>Gezi Adımları</h3>

    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>İkon</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><i class="@item.Icon"></i> <span class="ms-2">@item.Icon</span></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a href="/TravelStep/UpdateTravelStep/@item.TravelStepId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/TravelStep/DeleteTravelStep/@item.TravelStepId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </table>
    <br />
    <a href="/TravelStep/CreateTravelStep" class="btn btn-primary mb-3">Yeni Adım Ekle</a>

</div>