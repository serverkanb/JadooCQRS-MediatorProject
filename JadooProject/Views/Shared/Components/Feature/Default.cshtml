@using JadooProject.Features.CQRS.Results.FeatureResult

@model List<GetFeatureQueryResult>

<section style="padding-top: 7rem;">
    <div class="bg-holder" style="background-image:url(/jadoo/public/assets/img/hero/hero-bg.svg);">
    </div>
    <!--/.bg-holder-->
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5 col-lg-6 order-0 order-md-1 text-end"><img class="pt-7 pt-md-0 hero-img" src="@item.ImageUrl" alt="hero-header" /></div>


                <div class="col-md-7 col-lg-6 text-md-start text-center py-6">
                    <h4 class="fw-bold text-danger mb-3">Dünyada ki En iyi Rotalar</h4>
                    <h1 class="hero-title">@item.Title</h1>
                    <p class="mb-4 fw-medium">@item.Description<br class="d-none d-xl-block" /><br class="d-none d-xl-block" /></p>
                    <div class="text-center text-md-start">
                        <a class="btn btn-primary btn-lg me-md-4 mb-3 mb-md-0 border-0 primary-btn-shadow" asp-controller="AllDestination" asp-action="Index" role="button">Daha Fazlasını bul</a>
                        
                    </div>
                </div>

            </div>
        </div>
    }
</section>