@using JadooProject.Features.CQRS.Results.TravelStepResults
@model List<GetTravelStepsQueryResult>

<section id="booking">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="mb-4 text-start">
                    <h5 class="text-secondary">Kolay ve Hızlı </h5>
                    <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">3 Kolay Adımda Hayalindeki Yolculuğa Başla</h3>
                </div>
                @foreach (var item in Model)
                {
                    <div class="d-flex align-items-start mb-5">
                        <div class="bg-primary me-sm-4 me-3 p-3" style="border-radius: 13px">
                            <img src="@item.Icon" width="22" alt="steps" />
                        </div>
                        <div class="flex-1">
                            <h5 class="text-secondary fw-bold fs-0">@item.Title</h5>
                            <p>@item.Description<br class="d-none d-sm-block"> Dünyanın Her Köşesinde Gezdiğin Yerler </p>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-6 d-flex justify-content-center align-items-start">
                <div class="card position-relative shadow" style="max-width: 370px;">
                    <div class="position-absolute z-index--1 me-10 me-xxl-0" style="right:-160px;top:-210px;">
                        <img src="~/jadoo/public/assets/img/steps/bg.png" style="max-width:550px;" alt="shape" />
                    </div>
                    <div class="card-body p-3">
                        @if (ViewBag.LastTourImage != null)
                        {
                            <img class="mb-4 mt-2 rounded-2 w-100" src="@ViewBag.LastTourImage" alt="booking" />
                            <div>
                                <h5 class="fw-medium">@(ViewBag.LastTourCity ?? "Yunanistan") Turu</h5>
                                <p class="fs--1 mb-3 fw-medium">@ViewBag.LastTourDuration | by Jadoo</p>
                                <div class="icon-group mb-4">
                                    <span class="btn icon-item"><img src="~/jadoo/public/assets/img/steps/leaf.svg" alt="" /></span>
                                    <span class="btn icon-item"><img src="~/jadoo/public/assets/img/steps/map.svg" alt="" /></span>
                                    <span class="btn icon-item"><img src="~/jadoo/public/assets/img/steps/send.svg" alt="" /></span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center mt-n1">
                                        <img class="me-3" src="~/jadoo/public/assets/img/steps/building.svg" width="18" alt="building" />
                                        <span class="fs--1 fw-medium">24 people going</span>
                                    </div>
                                    <div class="show-onhover position-relative">
                                        <button class="btn"><img src="~/jadoo/public/assets/img/steps/heart.svg" width="20" alt="step" /></button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <img class="mb-4 mt-2 rounded-2 w-100" src="~/jadoo/public/assets/img/steps/booking-img.jpg" alt="booking" />
                            <h5 class="fw-medium">Yunanistan Turu</h5>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>