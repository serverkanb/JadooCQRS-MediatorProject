@using JadooProject.Features.CQRS.Commands.FeatureCommands
@model UpdateFeatureCommand

@{
    ViewData["Title"] = "UpdateFeature";
}

<div class="container">
    <h3>Öne Çıkan İçeriği Güncelle</h3>

    <form method="post">
        <input type="hidden" asp-for="FeatureId" />

        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <br />
        <label>Görsel URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
</div>