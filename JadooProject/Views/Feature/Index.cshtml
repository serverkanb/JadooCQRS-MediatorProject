@using JadooProject.Features.CQRS.Results.FeatureResult
@model List<GetFeatureQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <h1>Öne Çıkanlar</h1>
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><img src="@item.ImageUrl" width="150" /></td>
                <td>
                    <a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Feature/DeleteFeature/@item.FeatureId" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
     
    </table>
    <br />
    <a href="/Feature/CreateFeature" class="btn btn-primary">Yeni Öne Çıkan Oluştur</a>
</div>

